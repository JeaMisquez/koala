<p id="notice"><%= notice %></p>

<div id='search-box'>
<%= form_tag(negocios_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Que estas buscando..." %>
  <div id='button'>
   <%= submit_tag "Buscar" %>
  </div>
<% end %>
</div>

<div id='search-results'>
  <% @negocios.each do |negocio| %>
  <div id='results-box'>
    <div id='name'><%= link_to negocio.name, negocio %></div>
    <div id='desc'><%= negocio.desc %></div>
  </div>
  <% end %>
</div>


